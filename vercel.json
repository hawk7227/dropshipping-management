{
  "crons": [
    {
      "path": "/api/cron?job=price-sync",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron?job=shopify-sync",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron?job=order-sync",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron?job=daily-stats",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron?job=full-price-sync",
      "schedule": "0 3 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
